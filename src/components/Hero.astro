---
import Services from "./Services.astro";
import Button from "./Button.astro";
---

<section class="hero">
  <!-- Markup her -->
  <div class="left">
    <h2>Empowering Your Business Growth</h2>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <Button URL="#0" variant="tertiary">Book a Meeting</Button>
  </div>
  <div class="right"></div>
  <Services />
</section>

<style>
  .hero {
    display: grid;
    grid-template-columns: subgrid;

    > * {
      grid-column: 2;
    }
  }
</style>

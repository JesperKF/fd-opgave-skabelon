---

<button popovertarget="popup">Login</button>

<div id="popup" popover>
  <h2>Dashboard Login</h2>
  <form>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required />

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required />

    <button popovertarget="popup">Go to dashboard</button>
  </form>
</div>

<style>
  @layer components {
    button {
      background-color: var(--yellow-button);
      color: var(--primary-color);
      padding: 0.5rem 1rem;
      border: none;
      border-radius: var(--button-radius);
      cursor: pointer;

      &:hover {
        background-color: var(--yellow-button-hover);
      }
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    ::backdrop {
      backdrop-filter: blur(4px);
    }

    [popover] {
      min-width: 500px;
      padding: 40px 60px 60px 60px;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 10px;
      background-color: var(--primary-color-light);
      color: var(--third-color);
      border-radius: var(--button-radius);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      opacity: 0;
      translate: 0 -100%;

      transition: 0.6s;
      transition-property: opacity, display, overlay, translate;
      transition-behavior: allow-discrete;

      &:popover-open {
        display: flex;
        opacity: 1;
        translate: 0 0;

        @starting-style {
          opacity: 0;
          translate: 0 100%;
        }
      }

      h2 {
        font-size: var(--s-font);
      }

      input {
        border-radius: 5px;
        background-color: var(--third-color);
        color: var(--primary-color);
        border: 1px solid var(--third-color);
      }
    }
    #popup button {
      margin-top: 1.25rem;
      padding-inline: 2rem;
    }
  }
</style>

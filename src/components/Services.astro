---
//@ts-nocheck
const servicesData = await fetch("https://frontend-design-theme.netlify.app/api/services").then((response) => response.json());
---

<ul class="services">
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a href="#0">{service.buttonText}</a>
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    ul {
      list-style: none;
      display: flex;
      padding: 2rem;
      gap: 2rem;
      width: var(--content-width);
    }

    li {
      background-color: var(--primary-color-transparent);
      padding: 1rem;

      border-radius: var(--button-radius);
      color: var(--third-color);

      & a {
        text-decoration: none;
        color: var(--third-color);
        padding: 0.5rem 1rem;
        border-radius: var(--button-radius);
        background-color: var(--primary-color);
      }
    }
  }
</style>
